<div class="container" data-filtre-target="filtrable">
  <% @posts.each do |p| %>
    <%= link_to post_path(p) do %>
      <div class="card-product" style="margin-bottom: 5px;">
        <% if p.photos.attached? %>
          <% p.photos.each do |photo| %>
            <%= cl_image_tag photo.key, height: 200, width: 300, crop: :fill, effect: "art:quartz", class: 'card-product-img' %>
          <% end %>
        <% else %>
            <img src="https://source.unsplash.com/random?actor" class="card-product-img"/>
        <% end %>
        <div class="card-product-infos" style="width: 100%;">
          <div>
            <h2><%= p.titre %></h2>
            <p><%= p.descriptif.truncate(80) %></p>
          </div>
          <p class="card-trip-pricing" style="text-align: end;">
            <span><%= p.departement || p.ville.capitalize || p.lieux.capitalize %></span>
            <i class="fa-solid fa-location-dot"></i>
          </p>
        </div>
      </div>
    <% end %>
  <% end %>
</div>
