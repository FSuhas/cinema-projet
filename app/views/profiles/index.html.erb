<script>
  if (window.location.pathname == '/profiles') {
    body.style = 'height: calc(100%); background: linear-gradient(110deg, rgb(184 184 184) 10%, rgb(255 255 255) 50%, rgba(184 184 184) 90%);';
  }
</script>

<%= render 'shared/navbar' %>


<div class="container">
  <strong>informations importantes</strong>
  <hr>

  <div style="display: flex;justify-content: space-between;align-items: flex-start;">
    <p>Nom : <strong><%= @user.nom %></strong></p>
    <button type="button" data-bs-toggle="modal" data-bs-target="#nom" style="border: none;font-size:15px;background: none;">
      <i class="fa-solid fa-pen-to-square" style="border: none;font-size:15px;"></i>
    </button>
  </div>
  <div style="display: flex;justify-content: space-between;align-items: flex-start;">
    <p>Prénom : <strong><%= @user.prenom %></strong></p>
    <button type="button" data-bs-toggle="modal" data-bs-target="#prenom" style="border: none;font-size:15px;background: none;">
      <i class="fa-solid fa-pen-to-square" style="border: none;font-size:15px;"></i>
    </button>
  </div>
  <div style="display: flex;justify-content: space-between;align-items: flex-start;">
    <p>Adresse : <strong><%= @user.adresse %></strong></p>
    <button type="button" data-bs-toggle="modal" data-bs-target="#adresse" style="border: none;font-size:15px;background: none;">
      <i class="fa-solid fa-pen-to-square" style="border: none;font-size:15px;"></i>
    </button>
  </div>
  <div style="display: flex;justify-content: space-between;align-items: flex-start;">
    <p>Date de naissance : <strong><%= @user.date_de_naissance %></strong></p>
    <button type="button" data-bs-toggle="modal" data-bs-target="#date" style="border: none;font-size:15px;background: none;">
      <i class="fa-solid fa-pen-to-square" style="border: none;font-size:15px;"></i>
    </button>
  </div>
  <br>
  <strong>informations complémentaires</strong>
  <hr>

  <div style="display: flex;justify-content: space-between;align-items: flex-start;">
    <p>Photo de profil</p>
    <button type="button" data-bs-toggle="modal" data-bs-target="#photo" style="border: none;font-size:15px;background: none;">
      <i class="fa-solid fa-pen-to-square" style="border: none;font-size:15px;"></i>
    </button>
  </div>
  <div style="display: flex;justify-content: space-between;align-items: flex-start;">
    <p>Numéro de téléphone : <strong><%= @user.telephone %></strong></p>
    <button type="button" data-bs-toggle="modal" data-bs-target="#phone" style="border: none;font-size:15px;background: none;">
      <i class="fa-solid fa-pen-to-square" style="border: none;font-size:15px;"></i>
    </button>
  </div>
  <div style="display: flex;justify-content: space-between;align-items: flex-start;">
    <p>Email : <strong><%= @user.email %></strong></p>
    <button type="button" data-bs-toggle="modal" data-bs-target="#email" style="border: none;font-size:15px;background: none;">
      <i class="fa-solid fa-pen-to-square" style="border: none;font-size:15px;"></i>
    </button>
  </div>
  <br>
  <strong>Description</strong>
  <hr>

  <div class="card-book" style="display: flex;height:100px;/* align-items: center; */justify-content: space-around;">
      <p><%= @user.infos %></p>
      <button type="button" data-bs-toggle="modal" data-bs-target="#infos" style="position: fixed;border: none;background: none;bottom: 0;right: 0;">
        <i class="fa-solid fa-pen-to-square" style="border: none;font-size:15px;"></i>
      </button>
  </div>
<%= render 'shared/footer' %>
</div>





<!-- Modal -->

<div class="modal fade" id="bio" tabindex="-1" aria-labelledby="bioLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="container">
        <h2>Decrivez-vous : </h2>
        <%= simple_form_for(infos_path, data: {turbo_method: 'post'}) do |f| %>
          <div class="form-inputs">
            <%= f.input :infos,
                        required: true,
                        autofocus: true,
                        label: false,
                        placeholder: @user.infos,
                        input_html: { autocomplete: "bio" } %>
          </div>
          <div class="form-actions">
            <%= f.button :submit, "Update", class: 'btn btn-primary' %>
          </div>
        <% end %>
        <%= link_to "Back", :back %>
      </div>
    </div>
  </div>
</div>

<div class="modal fade" id="avatar" tabindex="-1" aria-labelledby="avatarLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="container">
        <h2>Edit </h2>
        <%= simple_form_for(infos_path, data: {turbo_method: 'post'}) do |f| %>
          <div class="form-inputs">
            <%= f.input :photo,
                        as: :file,
                        required: true,
                        autofocus: true,
                        label: false,
                        placeholder: @user.photo,
                        input_html: { autocomplete: "bio" } %>
          </div>
          <div class="form-actions">
            <%= f.button :submit, "Update", data: { turbo_method: "post" }, class: 'btn btn-primary' %>
          </div>
        <% end %>
        <%= link_to "Back", :back %>
      </div>
    </div>
  </div>
</div>

<div class="modal fade" id="infos" tabindex="-1" aria-labelledby="bioLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="container">
        <h2>Vos information personnels : </h2>
        <%= simple_form_for(infos_path, data: {turbo_method: 'post'}) do |f| %>
          <div class="form-inputs">
            <%= f.input :date_de_naissance,
                        as: :date,
                        required: true,
                        html5: true,
                        label: "Date de naissance" %>
            <%= f.input :sexe,
                        collection: ["Homme", "Femme", "Autre"],
                        required: true,
                        label: "Genre" %>
            <%= f.input :adresse,
                        required: true,
                        label: 'Adresse',
                        placeholder: @user.adresse %>
            <%= f.input :telephone,
                        label: 'Téléphone',
                        required: true,
                        placeholder: @user.telephone %>
            <%= f.input :email,
                        label: 'Email',
                        required: true,
                        placeholder: @user.email %>
          </div>
          <div class="form-actions">
            <%= f.button :submit, "Update", class: 'btn btn-primary' %>
          </div>
        <% end %>
        <%= link_to "Back", :back %>
      </div>
    </div>
  </div>
</div>

<div class="modal fade" id="name" tabindex="-1" aria-labelledby="nameLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="container">
        <h2>Vous êtes ? </h2>
        <%= simple_form_for(infos_path, data: {turbo_method: 'post'}) do |f| %>
          <div class="form-inputs">
            <%= f.input :prenom,
                        required: false,
                        autofocus: true,
                        label: false,
                        placeholder: @user.prenom,
                        input_html: { autocomplete: @user.prenom } %>
            <%= f.input :nom,
                        required: false,
                        autofocus: true,
                        label: false,
                        placeholder: @user.nom,
                        input_html: { autocomplete: @user.nom } %>
          <div class="form-actions">
            <%= f.button :submit, "Update", data: { turbo_method: "post" }, class: 'btn btn-primary' %>
          </div>
        <% end %>
        <%= link_to "Back", :back %>
      </div>
    </div>
  </div>
</div>

<%= render 'shared/retour' %>
