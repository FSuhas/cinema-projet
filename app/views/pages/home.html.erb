<div class="container">
  <% if user_signed_in? %>
    <% if @user.role === 'candidat' %>
      <%= link_to "/posts" do %>
        <img class="right" src="https://source.unsplash.com/random?cinema" style="width: 100%; height: 100%">
      <% end %>
    <% else @user === 'recruteur' %>
      <%= link_to "/candidats" do %>
        <img class="left" src="https://source.unsplash.com/random?film" style="width: 100%; height: 100%">
      <% end %>
    <% end %>
  <% else %>
    <%= link_to "/profiles" do %>
      <img class="left" src="https://source.unsplash.com/random?film" style="width: 100%; height: 100%">
    <% end %>
    <%= link_to "/posts" do %>
      <img class="right" src="https://source.unsplash.com/random?cinema" style="width: 100%; height: 100%">
    <% end %>
  <% end %>
</div>
